@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<se310_th2.Models.TDanhMucSp>

@{
    ViewData["Title"] = "DanhMucSanPham";
    Layout = "_LayoutAdmin";
}

<h3>Danh mục các sản phẩm</h3>

<p>
    <a asp-action="ThemSanPhamMoi">Tạo sản phẩm mới</a>
</p>

<p>@TempData["Message"]</p>

<table class="table">
    <thead>
    <tr>
        <th>Tên sản phẩm</th>
        <th>Cân nặng</th>
        <th>Độ nới</th>
        <th>Thời gian bảo hành</th>
        <th>Chiết khấu</th>
        <th>Giá lớn nhất</th>
        <th>Giá nhỏ nhất</th>
        <th>Thao tác</th>
    </tr>
    </thead>
    <tbody>
    @{
        int i = 0;
        string @trColorClass = "table-success";
    }
    @foreach (var item in Model)
    {
        i = i + 1;
        trColorClass = i % 2 == 0 ? "table-success" : "table-warning";

        <tr class="@trColorClass">
            <td>@item.TenSp</td>
            <td>@item.CanNang</td>
            <td>@item.DoNoi</td>
            <td>@item.ThoiGianBaoHanh</td>
            <td>@item.ChietKhau</td>
            <td>@item.GiaNhoNhat</td>
            <td>@item.GiaLonNhat</td>
            <td>
                <a asp-area="Admin" asp-controller="AdminHome" asp-action="SuaSanPham" asp-route-maSp="@item.MaSp">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaSp">Details</a> |
                <a asp-area="Admin" asp-controller="AdminHome" asp-action="XoaSanPham" asp-route-maSp="@item.MaSp">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<div>
    @Html.PagedListPager(Model, page => Url.Action("DanhMucSanPham", new { page = page }), new PagedListRenderOptions()
    {
        LiElementClasses = new List<string>{"page-item"},
        PageClasses = new List<string> {"page-link"}
    })
</div>
