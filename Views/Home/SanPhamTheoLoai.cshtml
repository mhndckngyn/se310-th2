@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<se310_th2.Models.TDanhMucSp>

@{
    ViewBag.Title = "SanPhamTheoLoai";
    Layout = "_LayoutOgani";
}

<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Featured Product</h2>
                </div>
                <div class="featured__controls">
                    <ul>
                        <li class="active" data-filter="*">All</li>
                        <li data-filter=".oranges">Oranges</li>
                        <li data-filter=".fresh-meat">Fresh Meat</li>
                        <li data-filter=".vegetables">Vegetables</li>
                        <li data-filter=".fastfood">Fast food</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @foreach (var item in Model)
            {
                @await Html.PartialAsync("PartialSanPham", new {item = item, path = "../"})
            }
        </div>

        <div class="row product__pagination justify-content-center">
            @Html.PagedListPager(Model, page => Url.Action("SanPhamTheoLoai", new { page = page, maLoai = ViewBag.maLoai }))
        </div>
    </div>
    
</section>